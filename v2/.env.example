# ACL GESTION v2 - Configuration
# Copier en .env et adapter les valeurs

# Application
NODE_ENV=production
PORT=3000
APP_URL=https://acl-gestion.com
APP_NAME=ACL GESTION

# Base de donnees MySQL
DB_HOST=localhost
DB_PORT=3306
DB_NAME=acl_gestion
DB_USER=acl_user
DB_PASS=votre_mot_de_passe
DB_POOL_MIN=2
DB_POOL_MAX=10

# JWT
JWT_SECRET=generer_avec_openssl_rand_hex_32
JWT_EXPIRY=7d

# Securite
CORS_ORIGINS=https://acl-gestion.com
LOGIN_MAX_ATTEMPTS=5
LOGIN_LOCKOUT_MINUTES=15

# Email (SMTP)
SMTP_ENABLED=false
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@acl-gestion.com
ADMIN_EMAIL=admin@acl-gestion.com

# Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# Migration PHP -> Node.js (utilis√© par scripts/migrate-from-php.js)
PHP_DB_HOST=localhost
PHP_DB_NAME=acl_gestion
PHP_DB_USER=root
PHP_DB_PASS=
PHP_UPLOAD_DIR=/var/www/acl-gestion.com/uploads
